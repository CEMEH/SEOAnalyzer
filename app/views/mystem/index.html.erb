<%= form_tag({:controller => "mystem", :action => "index"}, :method => "post", :class => 'well') do %>
    <%= label_tag(:code, "HTML-code:") %>
    <%= text_area_tag(:code, @code) %>
    <%= submit_tag("Анализировать", :class=>"btn btn-success") %>
<% end %>

<% if @result.present? %>
    <h3>Результат</h3>
    <table class="table table-striped table-bordered table-condensed">
      <thead>
      <tr>
        <th>Слово</th>
        <th>Вес</th>
        <th>Средняя&nbsp;позиция</th>
        <th>Вхождения</th>
      </tr>
      </thead>
      <tbody>
      <% @result.words.each do |words| %>
          <% word = words[1] %>
          <tr>
            <td>
              <%= word %>
            </td>
            <td>
              <%= word.weight %>%
            </td>
            <td>
              <%= word.avg_pos %>
            </td>
            <td>
              <% word.words.each do |entry_word| %>
                  <%= entry_word[1] %>:<%= entry_word[0] %><br/>
              <% end %>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>

<% end %>